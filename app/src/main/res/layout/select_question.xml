<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="Pick a Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:text="Text Question"
            app:icon="@drawable/ic_short_text"
            android:textColor="@color/color4"
            app:rippleColor="@color/color3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:id="@+id/questionTextButton"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:text="Paragraph Question"
            app:icon="@drawable/ic_long_text"
            android:textColor="@color/color4"
            app:rippleColor="@color/color3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/questionTextButton"
            android:id="@+id/questionParagraphButton"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:text="Radio Group Question"
            app:icon="@drawable/ic_radio_button"
            android:textColor="@color/color4"
            app:rippleColor="@color/color3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/questionParagraphButton"
            android:id="@+id/questionRadioGroupButton"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:text="Check Box Question"
            app:icon="@drawable/ic_check_box"
            android:textColor="@color/color4"
            app:rippleColor="@color/color3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/questionRadioGroupButton" android:id="@+id/questionCheckBoxButton"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:text="Drop Down Question"
            app:icon="@drawable/ic_drop_down"
            android:textColor="@color/color4"
            app:rippleColor="@color/color3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/questionCheckBoxButton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/questionDropDownButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>